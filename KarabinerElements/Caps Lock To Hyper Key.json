{
  "description": "Caps Lock To Hyper Key Or Hold For Switch Input Source",
  "manipulators": [
    {
      "from": {
        "key_code": "caps_lock",
        "modifiers": { "optional": ["any"] }
      },
      "to": [
        {
          "key_code": "left_shift",
          "modifiers": ["left_command", "left_control", "left_option"]
        }
      ],
      "to_if_alone": [
        {
          "key_code": "spacebar",
          "modifiers": ["left_control"]
        }
      ],
      "type": "basic"
    }
  ]
}
