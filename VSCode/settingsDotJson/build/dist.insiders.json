{
  "$schema": "vscode://schemas/settings/user",
  "search.defaultViewMode": "tree",
  // 直接复制
  "explorer.confirmPasteNative": false,
  "explorer.compactFolders": false,
  // 文件关联方式
  "files.associations": {
    // UniApp
    "pages.json": "jsonc",
    "manifest.json": "jsonc",
    // env
    ".env.*": "env"
  },
  // js显示参数名
  "javascript.inlayHints.parameterNames.enabled": "all",
  // js自动更新应用
  "javascript.updateImportsOnFileMove.enabled": "always",
  // ts显示参数名
  "typescript.inlayHints.parameterNames.enabled": "all",
  //ts自动更新引用
  "typescript.updateImportsOnFileMove.enabled": "always",
  "json.format.keepLines": true,
  //dev container
  "dev.containers.executeInWSL": true,
  // wsl使用插件的方式
  "remote.extensionKind": {
    "GitHub.copilot": ["ui"],
    "github.copilot-chat": "ui"
  },
  // security
  "security.promptForLocalFileProtocolHandling": false,
  "security.workspace.trust.untrustedFiles": "open",
  // fix auth failed
  // "microsoft-authentication.implementation": "classic"
  "animations.Install-Method": "Custom CSS and JS",
  "animations.UseCursorColorForCursorAnimation": true,
  "animations.Active": "None",
  "animations.CursorAnimation": true,
  "animations.Smooth-Mode": false,
  "animations.Command-Palette": "Fade",
  "animations.Scrolling": "None",
  "animations.Durations": {
    "Command-Palette": 200
  },
  "animations.Enabled": false,
  // secondary side bar because we use chat
  "autoHide.autoHideAuxiliaryBar": false,
  "catppuccin.accentColor": "lavender",
  "catppuccin.bracketMode": "monochromatic",
  "catppuccin.colorOverrides": {
    "mocha": {
      // darker
      "base": "#161621",
      "mantle": "#161621",
      "crust": "#161621"
      // very high contrast
      // "base": "#000000",
      // "mantle": "#010101",
      // "crust": "#020202"
    }
  },
  "catppuccin-icons.associations.files": {
    "commitlint.config.mjs": "commitlint"
  },
  // cspell用户词库
  "cSpell.userWords": [
    "agnoster",
    "ARCHFLAGS",
    "asvetliakov",
    "autofetch",
    "brandonkirbyson",
    "caffeinecat",
    "Cartograph",
    "catppuccin",
    "Colour",
    "Consolas",
    "deepwiki",
    "easymotion",
    "emotty",
    "esbenp",
    "fastfetch",
    "Fira",
    "foldfix",
    "foxundermoon",
    "fwalch",
    "ghcup",
    "hlsearch",
    "ideavimrc",
    "ignorecase",
    "jaischeema",
    "keymap",
    "lazygit",
    "luahelper",
    "MANPATH",
    "mapleader",
    "matchpairs",
    "Moegi",
    "nmap",
    "nvim",
    "ohmyzsh",
    "overwin",
    "Oxlint",
    "peepcode",
    "pipx",
    "powermode",
    "Propo",
    "relativenumber",
    "robbyrussell",
    "simonoff",
    "skhd",
    "skhdrc",
    "smartcase",
    "strftime",
    "tabnine",
    "trapd",
    "unnamedplus",
    "vmap",
    "vmoptions",
    "vnoremap",
    "vscodevim",
    "yabai",
    "yabairc",
    "yinfei",
    "zoxide",
    "zshconfig",
    "zstyle"
  ],
  "console-ninja.fontSize": 13,
  // console ninja 使用免费社区版或其他
  "console-ninja.featureSet": "Community",
  // "console-ninja.showWhatsNew": false
  // 建议补全通过替换而不是在后面插入
  // "editor.suggest.insertMode": "replace",
  // 关闭屏幕阅读
  "editor.accessibilitySupport": "off",
  // 保存时的自动化
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.removeUnusedImports": "always"
  },
  // 光标不停闪烁
  "editor.cursorBlinking": "smooth",
  "editor.fontFamily": "'Maple Mono', 'Fira Code', 'Cartograph CF', 'Victor Mono', Consolas, 'Courier New', monospace",
  // 允许字体连体,例如: => <=
  "editor.fontLigatures": true,
  // 字体大小 13
  "editor.fontSize": 13,
  // 格式化开启或关闭
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  // 匹配括号的彩色标识线
  "editor.guides.bracketPairs": true,
  // 相对行号
  "editor.lineNumbers": "relative",
  // auto rename tag & auto close tag
  "editor.linkedEditing": true,
  //隐藏小地图
  "editor.minimap.enabled": false,
  "editor.semanticHighlighting.enabled": true,
  // 滚动顺滑
  "editor.smoothScrolling": true,
  // 自动换行
  "editor.wordWrap": "on",
  "editor.aiStats.enabled": false,
  // 为了在vue的template中对于component标签的特殊高亮,用于区分普通的html元素
  "editor.semanticTokenColorCustomizations": {
    "[GitHub Dark Default]": {
      "rules": {
        "component": "#FFA657"
      }
    },
    "[cursor-darker]": {
      "rules": {
        "component": "#B48EAD"
      }
    }
  },
  // 字体斜体-配合部分字体有连体效果-每个主题需要对应的配置
  "editor.tokenColorCustomizations": {
    "[Ayu Dark Bordered]": {
      "textMateRules": [
        {
          "scope": "emphasis",
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": "strong",
          "settings": {
            "fontStyle": "bold"
          }
        },
        {
          "scope": "entity.other.attribute-name",
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": "markup.underline",
          "settings": {
            "fontStyle": "underline"
          }
        },
        {
          "scope": "markup.bold",
          "settings": {
            "fontStyle": "bold"
          }
        },
        {
          "scope": "markup.heading",
          "settings": {
            "fontStyle": "bold"
          }
        },
        {
          "scope": "markup.italic",
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": "storage.type",
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": "storage.modifier",
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "name": "String interpolation",
          "scope": [
            "punctuation.definition.template-expression.begin",
            "punctuation.definition.template-expression.end",
            "punctuation.section.embedded"
          ],
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": "keyword.control",
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": [
            "keyword.operator.new",
            "keyword.operator.expression",
            "keyword.operator.cast",
            "keyword.operator.sizeof",
            "keyword.operator.logical.python"
          ],
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "name": "this.self",
          "scope": "variable.language",
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "name": "@Decorator",
          "scope": ["meta.decorator punctuation.decorator"],
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": ["punctuation.definition.comment", "comment"],
          "settings": {
            "fontStyle": "italic"
          }
        }
      ]
    },
