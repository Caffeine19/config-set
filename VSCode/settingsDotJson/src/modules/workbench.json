{
  "$schema": "vscode://schemas/settings/user",

  "workbench.startupEditor": "none",

  "workbench.tree.indent": 16,

  // 样式自定义
  "workbench.colorCustomizations": {
    // transparent, to fix render error in terminal background on display with custom cal profile
    "terminal.background": "#00000000",

    "[Catppuccin Mocha]": {
      "editorGroup.border": "#4f4f4f3d"
    },
    "[Moegi Black]": {
      "editorCursor.foreground": "#f2d98e",
      "editorGroup.border": "#4f4f4f6d",
      "tab.activeBackground": "#66b39520",
      "tab.activeBorder": "#66b395"
    },
    "[Tokyo Night]": {
      "tab.activeBorder": "default",
      "tab.activeBorderTop": "#3d59a1"
      // "tab.activeBackground": "#66b39520"
    },
    "[Halcyon]": {
      // "scrollbar.shadow": "#00030f", // default
      "scrollbar.shadow": "#00030F66", // softer

      // "widget.shadow": "#00030f", // default
      "widget.shadow": "#00030F99" // softer
    }
  },

  "workbench.editor.labelFormat": "medium",

  // 标签自动换行
  "workbench.editor.wrapTabs": true,

  "workbench.iconTheme": "catppuccin-mocha",

  "workbench.layoutControl.enabled": false,

  // 滚动顺滑
  "workbench.list.smoothScrolling": true,

  // maybe the default icon theme is better
  // "workbench.productIconTheme": "fluent-icons",

  "workbench.activityBar.location": "top",

  "workbench.colorTheme": "GitHub Dark Default"
}
